{
  "name": "regression-tool",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "For Running Exhaustive Regression",
  "homepage_url": "https://www.walmart.com",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_script.js",
        "jquery.js",
        "lodash.js",
        "actions.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Regression Tool"
  },
  "permissions": [
    "activeTab",
    "https://*/*",
    "http://*/*",
    "tabs"
  ],
  "web_accessible_resources": [
    "inject_immediate.js"
  ]
}
